<section class="py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Mis Pedidos Asignados</h2>
  </div>

{{#if hasPendingOrdersList}}
  <div class="list-group">
    {{#each pendingOrdersList}}
      <a href="/delivery/order-details/{{this.orderId}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">

        <div class="d-flex align-items-center">
          
          <div class="me-3">
            <img src="{{this.imageUrl}}" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
          </div>
          
          <div>
            <div class="fw-semibold">
              {{this.profileName}}
              <span class="badge ms-2 {{#ifeq this.status 'PENDING'}}text-bg-warning{{else}}{{#ifeq this.status 'DELIVERING'}}text-bg-info{{else}}text-bg-success{{/ifeq}}{{/ifeq}}">
                {{this.status}}
              </span>
            </div>
            <small class="text-muted">
              {{this.orderedAt}} — {{this.totalProducts}} producto(s)
            </small>
          </div>
        </div>  

        <div class="text-end">
          <div class="fw-bold">RD$ {{this.totalPrice}}</div>
          <small class="text-muted">Ver detalle →</small>
        </div>
        
      </a>
    {{/each}}
  </div>
{{else}}
  <div class="alert alert-info">Aún no tienes pedidos asignados.</div>
{{/if}}



