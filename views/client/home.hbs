{{! views/client/home.hbs }}
{{! layout ya muestra navbar y alerts }}
<section class="py-4">
  <div class="d-flex align-items-center mb-3">
    <h2 class="me-3">Explora por tipo de comercio</h2>
    <span class="badge text-bg-light">{{types.length}} tipos</span>
  </div>

  {{#if types.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
      {{#each types}}
      <div class="col">
        <a class="text-decoration-none" href="/client/commerces?type={{this.id}}">
          <div class="card h-100 shadow-sm">
            <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}" style="height: 160px; object-fit: cover;">
            <div class="card-body d-flex align-items-center justify-content-between">
              <h5 class="card-title m-0">{{this.name}}</h5>
              <i class="bi bi-chevron-right"></i>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">No hay tipos de comercio disponibles.</div>
  {{/if}}
</section>
