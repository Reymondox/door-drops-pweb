{{! views/client/orders.hbs }}
<section class="py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Mis pedidos</h2>
    <a class="btn btn-outline-secondary" href="/client/home"><i class="bi bi-house"></i> Home</a>
  </div>

  {{#if orders.length}}
    <div class="list-group">
      {{#each orders}}
      <a href="/client/orders/{{this.id}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <div>
          <div class="fw-semibold">
            {{this.CommercesModel.User.profileName}}
            <span class="badge ms-2 {{#ifeq this.status 'PENDING'}}text-bg-warning{{else}}{{#ifeq this.status 'DELIVERING'}}text-bg-info{{else}}text-bg-success{{/ifeq}}{{/ifeq}}">
              {{this.status}}
            </span>
          </div>
          <small class="text-muted">
            {{this.orderedAt}} — {{this.OrdersProductsModels.length}} productos
          </small>
        </div>
        <div class="text-end">
          <div class="fw-bold">RD$ {{this.totalPrice}}</div>
          <small class="text-muted">Ver detalle →</small>
        </div>
      </a>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">Aún no tienes pedidos.</div>
  {{/if}}
</section>
