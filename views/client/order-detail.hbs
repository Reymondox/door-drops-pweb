{{! views/client/order-detail.hbs }}
<section class="py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Detalle de pedido #{{order.id}}</h2>
    <a class="btn btn-outline-secondary" href="/client/orders"><i class="bi bi-arrow-left"></i> Volver</a>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <div class="d-flex align-items-center gap-3">
            <img src="{{order.Commerce.User.imageUrl}}" width="56" height="56" class="rounded" style="object-fit:cover;">
            <div>
              <div class="fw-semibold">{{order.CommercesModel.User.profileName}}</div>
              <small class="text-muted">Realizado: {{order.orderedAt}}</small>
            </div>
            <span class="ms-auto badge {{#ifeq order.status 'PENDING'}}text-bg-warning{{else}}{{#ifeq order.status 'DELIVERING'}}text-bg-info{{else}}text-bg-success{{/ifeq}}{{/ifeq}}">
              {{order.status}}
            </span>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header"><strong>Productos</strong></div>
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            {{#each order.OrdersProducts}}
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <div>{{this.Product.name}}</div>
              <div>RD$ {{this.Product.price}}</div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header"><strong>Resumen</strong></div>
        <div class="card-body">
          <div class="mb-2"><small class="text-muted">Direcci√≥n</small><br>{{order.address}}</div>
          <div class="d-flex justify-content-between">
            <span>Subtotal</span><strong>RD$ {{order.subtotal}}</strong>
          </div>
          {{#if order.itbisPercent}}
          <div class="d-flex justify-content-between">
            <span>ITBIS ({{order.itbisPercent}}%)</span>
            <strong>RD$ {{calcItbis order.subtotal order.itbisPercent}}</strong>
          </div>
          {{/if}}
          <hr>
          <div class="d-flex justify-content-between fs-5">
            <span>Total</span><strong>RD$ {{order.totalPrice}}</strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
