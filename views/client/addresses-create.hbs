{{! views/client/addresses-create.hbs }}
<section class="py-4">
  <h2 class="mb-3">Nueva dirección</h2>

  <form method="post" action="/client/addresses" class="card shadow-sm p-3">
    <div class="mb-3">
      <label class="form-label">Nombre de referencia</label>
      <input class="form-control" name="name" placeholder="Casa, Trabajo…" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Dirección completa</label>
      <textarea class="form-control" name="address" rows="3" required></textarea>
    </div>

    <div class="d-flex gap-2">
      <button class="btn btn-success" type="submit"><i class="bi bi-check2-circle"></i> Guardar</button>
      <a class="btn btn-outline-secondary" href="/client/addresses">Cancelar</a>
    </div>
  </form>
</section>
