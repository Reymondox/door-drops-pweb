{{! views/client/catalog.hbs }}
<section class="py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Catálogo</h2>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="/client/commerces?type="><i class="bi bi-arrow-left"></i> Volver a comercios</a>
      {{!-- <a class="btn btn-outline-primary" href="/client/cart"><i class="bi bi-cart"></i> Ver carrito</a> --}}
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      {{#if categories.length}}
        {{#each categories}}
          <div class="mb-4">
            <h4 class="border-bottom pb-2">{{this.name}}</h4>

            {{#if this.Products.length}}
              <div class="row row-cols-1 row-cols-md-2 g-3">
                {{#each this.Products}}
                <div class="col">
                  <div class="card h-100 shadow-sm">
                    <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}" style="height:180px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title">{{name}}</h5>
                      <p class="card-text text-muted flex-grow-1">{{description}}</p>
                      <div class="d-flex align-items-center justify-content-between">
                        <strong>RD$ {{price}}</strong>
                        <form method="post" action="/client/cart/add">
                          <input type="hidden" name="productId" value="{{id}}">
                          <input type="hidden" name="commerceId" value="{{@root.commerceId}}">
                          <input type="hidden" name="returnUrl" value="{{@root.currentUrl}}">
                          <button class="btn btn-sm btn-primary" type="submit">
                            <i class="bi bi-plus-circle"></i> Agregar
                          </button>
                        </form>

                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            {{else}}
              <div class="alert alert-light">No hay productos en esta categoría.</div>
            {{/if}}
          </div>
        {{/each}}
      {{else}}
        <div class="alert alert-warning">Este comercio aún no tiene categorías o productos.</div>
      {{/if}}
    </div>

    <div class="col-12 col-lg-4">
      <div class="card sticky-top shadow-sm" style="top: 90px;">
        <div class="card-header d-flex align-items-center justify-content-between">
          <strong>Mi pedido</strong>
          {{#if cart.items.length}}
            <span class="badge text-bg-primary">{{cart.items.length}}</span>
          {{/if}}
        </div>
        <div class="card-body">
          {{#if cart.items.length}}
            <ul class="list-group mb-3">
              {{#each cart.items}}
              <li class="list-group-item d-flex align-items-center justify-content-between">
                <div class="me-2">{{name}}</div>
                <div class="d-flex align-items-center gap-2">
                  <span>RD$ {{price}}</span>
                  <form method="post" action="/client/cart/remove" class="m-0">
                    <input type="hidden" name="productId" value="{{productId}}">
                    <button class="btn btn-sm btn-outline-danger" type="submit" title="Quitar">
                      <i class="bi bi-x-lg"></i>
                    </button>
                  </form>
                </div>
              </li>
              {{/each}}
            </ul>

            <div class="d-flex justify-content-between">
              <span class="text-muted">Subtotal</span>
              <strong>RD$ {{cart.subtotal}}</strong>
            </div>
            <small class="text-muted d-block mb-2">El ITBIS se calcula en el siguiente paso.</small>

            <a class="btn btn-success w-100" href="/client/checkout">
              Continuar <i class="bi bi-arrow-right-circle"></i>
            </a>
          {{else}}
            <div class="text-center text-muted">
              <i class="bi bi-bag fs-1 d-block mb-2"></i>
              Aún no has agregado productos.
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
