{{! views/client/checkout.hbs }}
<section class="py-4">
  <h2 class="mb-3">Checkout</h2>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header"><strong>Selecciona una dirección</strong></div>
        <div class="card-body">
          {{#if addresses.length}}
            <form method="post" action="/client/checkout">
              <div class="list-group mb-3">
                {{#each addresses}}
                <label class="list-group-item d-flex align-items-start gap-3">
                  <input class="form-check-input mt-1" type="radio" name="addressId" value="{{this.id}}" required>
                  <div>
                    <div class="fw-semibold">{{this.name}}</div>
                    <small class="text-muted">{{this.address}}</small>
                  </div>
                </label>
                {{/each}}
              </div>

              <button class="btn btn-success" type="submit">
                Confirmar pedido <i class="bi bi-check2-circle"></i>
              </button>
              <a class="btn btn-outline-secondary ms-2" href="/client/cart">
                Volver al carrito
              </a>
            </form>
          {{else}}
            <div class="alert alert-warning">
              No tienes direcciones guardadas.
              <a href="/client/addresses/new" class="alert-link">Crear una ahora</a>.
            </div>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header"><strong>Resumen</strong></div>
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <span>Subtotal</span>
            <strong>RD$ {{cart.subtotal}}</strong>
          </div>
          <div class="d-flex justify-content-between">
            <span>ITBIS ({{itbisPercent}}%)</span>
            <strong>RD$ {{itbisValue}}</strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between fs-5">
            <span>Total</span>
            <strong>RD$ {{total}}</strong>
          </div>
          <small class="text-muted d-block mt-2">Se cobrará al confirmar el pedido.</small>
        </div>
      </div>
    </div>
  </div>
</section>
