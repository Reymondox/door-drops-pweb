<div class="container mt-4">
  <h2 class="mb-4">Mis pedidos</h2>

  {{#if hasPedidos}}
    <div class="list-group">
      {{#each pedidosList}}
        <a href="/commerce/pedidos/{{this.id}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mb-2 shadow-sm rounded">
          <div class="d-flex align-items-center">
            {{#if this.Commerce.logoUrl}}
              <img src="{{this.Commerce.logoUrl}}" alt="{{this.Commerce.name}}" class="rounded-circle me-3" width="50" height="50">
            {{/if}}
            <div>
              <h5 class="mb-1">{{this.Commerce.name}}</h5>
              <small>
                {{#if (eq this.estado "pendiente")}}
                  <span class="badge bg-warning text-dark">Pendiente</span>
                {{else if (eq this.estado "en proceso")}}
                  <span class="badge bg-info text-dark">En Proceso</span>
                {{else if (eq this.estado "completado")}}
                  <span class="badge bg-success">Completado</span>
                {{/if}}
                • {{this.createdAt}}
              </small>
            </div>
          </div>
          <div class="text-end">
            <strong>RD$ {{this.total}}</strong><br>
            <small>{{this.productosCount}} productos</small>
          </div>
        </a>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">No tienes pedidos registrados aún.</div>
  {{/if}}
</div>