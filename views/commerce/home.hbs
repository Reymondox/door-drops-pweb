<div class="container my-5">
  <h2 class="fw-bold text-primary mb-4">üè† Home del Comercio</h2>

  {{#if ordersList.length}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {{#each ordersList}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title">Pedido #{{this.id}}</h5>
              <p class="mb-1"><strong>Estado:</strong> {{this.status}}</p>
              <p class="mb-1"><strong>Total:</strong> ${{this.totalPrice}}</p>
              <p class="mb-1"><strong>Cantidad de productos:</strong> {{this.Products.length}}</p>
              <p class="mb-1"><strong>Fecha y hora:</strong> {{this.orderedAt}}</p>
            </div>
            <div class="card-footer bg-white border-top-0 d-flex justify-content-end">
              <a href="/commerce/orders/{{this.id}}" class="btn btn-primary btn-sm">Ver detalle</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      No hay pedidos en este momento.
    </div>
  {{/if}}
</div>
