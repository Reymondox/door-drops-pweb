<div class="container my-5">
  <h2 class="fw-bold text-primary mb-4">üè† Home del Comercio</h2>

  {{#if ordersList}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {{#each ordersList}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <img src="{{../commerce.imageUrl}}" alt="{{../commerce.profileName}}" class="mb-2" style="width:60px;height:60px;object-fit:cover;border-radius:50%;">
              <h5 class="card-title">Pedido #{{this.id}}</h5>
              <p><strong>Comercio:</strong> {{../commerce.profileName}}</p>
              <p><strong>Estado:</strong> {{this.status}}</p>
              <p><strong>Total:</strong> ${{this.totalPrice}}</p>
              <p><strong>Cantidad de productos:</strong> {{this.totalProducts}}</p>
              <p><strong>Fecha y hora:</strong> {{this.orderedAt}}</p>
            </div>
            <div class="card-footer bg-white d-flex justify-content-end">
              <a href="/commerce/orders/{{this.id}}" class="btn btn-primary btn-sm">Ver detalle</a>
            </div>
          </div>
        </div> 
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      No hay pedidos en este momento.
    </div>
  {{/if}}
</div>