<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4">{{pageTitle}}</h1>

      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      <form action="{{#if editMode}}/commerce/edit{{else}}/commerce/create{{/if}}" method="POST">
        {{#if editMode}}
          <input type="hidden" name="categoriasId" value="{{categoria.id}}">
        {{/if}}

        <div class="mb-3">
          <label for="name" class="form-label">Nombre:</label>
          <input 
            type="text" 
            class="form-control" 
            id="name" 
            name="name" 
            value="{{#if editMode}}{{categoria.name}}{{/if}}" 
            required
          >
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Descripción:</label>
          <textarea 
            class="form-control" 
            id="description" 
            name="description" 
            rows="4" 
            required
          >{{#if editMode}}{{categoria.description}}{{/if}}</textarea>
        </div>

        <div class="d-flex justify-content-between">
          <a href="/commerce/categorias" class="btn btn-secondary">⬅️ Volver</a>
          <button type="submit" class="btn btn-primary">
            {{#if editMode}}Guardar Cambios{{else}}Crear Categoría{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
