<div class="container my-5">
  <h2 class="fw-bold text-primary mb-4">Detalle del Pedido #{{order.id}}</h2>

  <p><strong>Comercio:</strong> {{order.Commerce.profileName}}</p>
  <p><strong>Estado:</strong> {{order.status}}</p>
  <p><strong>Fecha y hora:</strong> {{order.orderedAt}}</p>

  <h5 class="mt-4">Productos</h5>
  {{#if order.Products.length}}
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each order.Products}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <img src="{{this.imageUrl}}" alt="{{this.name}}" class="card-img-top" style="height: 150px; object-fit: cover;">
            <div class="card-body">
              <h6 class="card-title">{{this.name}}</h6>
              <p><strong>Precio:</strong> ${{this.price}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">No hay productos en este pedido.</div>
  {{/if}}

  <p class="mt-3"><strong>Total del pedido:</strong> ${{order.totalPrice}}</p>

  {{#if (eq order.status "PENDING")}}
    <form method="POST" action="/commerce/orders/assign-delivery">
      <input type="hidden" name="orderId" value="{{order.id}}">
      <button type="submit" class="btn btn-success">Asignar Delivery</button>
    </form>
  {{/if}}

  <a href="/commerce/home" class="btn btn-secondary mt-3">Volver al Home</a>
</div>