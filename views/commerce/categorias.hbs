<div class="container my-5">
  <!-- T√≠tulo -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">{{pageTitle}}</h1>
    <a href="/commerce/create" class="btn btn-primary">
       Crear Nueva Categor√≠a
    </a>
  </div>

  {{#if hasCategorias}}
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th># Productos</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each categoriasList}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.description}}</td>
              <td>{{this.productosCount}}</td>
              <td>
                <!-- Bot√≥n Editar -->
                <a href="/commerce/edit/{{this.id}}" class="btn btn-sm btn-primary me-2">
                  ‚úèÔ∏è Editar
                </a>

                <!-- Formulario para eliminar -->
                <form action="/commerce/delete" method="POST" class="d-inline">
                  <input type="hidden" name="categoriasId" value="{{this.id}}">
                  <button type="submit" class="btn btn-sm btn-danger delete-categoria">
                    üóëÔ∏è Eliminar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info" role="alert">
      No hay categor√≠as registradas.
    </div>
  {{/if}}
</div>

