<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">🏷️ Mantenimiento de Categorías</h2>
    <a href="/commerce/create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Crear Nueva Categoría
    </a>
  </div>

  {{#if hasCategorias}}
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Productos</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each categoriasList}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.description}}</td>
              <td>{{this.productosCount}}</td>
              <td>
                <!-- Botón Editar -->
                <a href="/commerce/edit/{{this.id}}" class="btn btn-sm btn-primary me-2">
                  ✏️ Editar
                </a>

                <!-- Formulario para eliminar -->
                <form action="/commerce/delete" method="POST" class="d-inline">
                  <input type="hidden" name="categoriasId" value="{{this.id}}">
                  <button type="submit" class="btn btn-sm btn-danger delete-categoria">
                    🗑️ Eliminar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info" role="alert">
      No hay categorías registradas.
    </div>
  {{/if}}
</div>