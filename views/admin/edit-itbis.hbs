<div class="row mt-4">
    <h1 class="text-center">Alterar ITBIS</h1>
</div>

<div class="d-flex justify-content-center align-items-center mt-3 mb-3" id="commerce-types-form-container">
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <form method="post" id="base-form" action="/admin/configs/edit-itbis">

                <div class="mb-3">
                <label for="itbis-percentage" class="form-label">Porcentaje</label>
                <input class="form-control" id="itbis-percentage" type="number" name="ITBIPercentage" value="{{ITBIS.percentage}}"  placeholder="Ej. 18" required>
                </div>

                <input type="hidden" name="ITBIId" value="{{ITBIS.id}}">

                <div class="d-flex gap-2">
                <div clas="col-6 mb-3">
                    <a class="btn btn-danger" href="/admin/configs" id="clear-button"><i class="bi bi-arrow-left"></i> Cancelar y Volver</a>
                </div>  

                <div clas="col-6 mb-3 ">
                    <button type="submit" class="btn btn-primary" id="create-button"><i class="bi bi-floppy"></i> Guardar</button>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>