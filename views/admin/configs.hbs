{{else}}

<div class="row">
    <div class="col-12">
        <div class="alert alert-secondary text-center" role="alert">
            <i class="bi bi-info-circle"></i>
            No hay configuraciones que mostrar.
        </div>
    </div>
</div>

{{/if}}